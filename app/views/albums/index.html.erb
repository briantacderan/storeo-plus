    <div class="albums">
      <img alt="Open" id="simple-menu" class="icon-menu" src="https://content.codecademy.com/projects/z2d/stories/menu-black.svg" />
      <div class="container">
        <div class="row">
            
          <% @albums.each do |album| %>
            <div class="item">
              <div class="img-container">
                <%= image_tag album.image %>
              </div>
              <div class="album-info">
                <h2><%= album.title %></h2>
                  
                <% if current_user.id != album.user_id %>
                <p>
                  <%= link_to "Photos", album_path(album) %>
                </p>
                <% else %>
                <p>
                  <%= link_to "Photos", album_path(album) %> |
                  <%= link_to "Delete Album", album_path(album), method: "delete" %>
                </p>
                <% end %>
                  
              </div>
            </div>
          <% end %>
            
          <div class="item">
            <div class="img-container">
              <img src="https://content.codecademy.com/courses/rails-auth/img/fotofoto-logo.svg" />
            </div>
            <div class="album-info">
              <h2>New Album</h2>
              <p><%= link_to "Create", new_album_path(@album) %></p>
            </div>
          </div>
            
        </div>
      </div>
    </div>
