    <div class="form-page contact-main signup">
      <img alt="Open" id="simple-menu" class="icon-menu" src="https://content.codecademy.com/projects/z2d/stories/menu-white.svg" />
      <div class="container"> 
        <h1>Sign up for a FREE account with Storeo</h1> 
        <div class="form form-column">
            
          <%= form_for(:user, :url => users_path, :html => { :class => "form-section" }) do |f| %>
            <label for="firstname">First name</label>
            <%= f.text_field :first_name %>
            <label for="lastname">Last name</label>
            <%= f.text_field :last_name %>
            <label for="email">E-mail</label>
            <%= f.email_field :email %>
            <br><br>
            <label for="password">Create a password</label>
            <%= f.password_field :password, :placeholder => " Password" %>
            <%= f.password_field :password_confirmation, :placeholder => " Confirm Password" %>
            <%= f.submit "Create", :class => "btn btn-submit" %>
          <% end %>
            
        </div>
      </div>
    </div>
